<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper_oracle">
	<!-- Create -->
	<insert id="write" parameterType="PostDTO">
		INSERT INTO post_orcl (ID, WRITER, TITLE, POSTCONTENT, POSTDATE)
		VALUES (auto_incr.nextval, #{WRITER}, #{TITLE}, #{POSTCONTENT}, SYSDATE);
	</insert>
	<!-- Read -->
	<select id="read" parameterType="int" resultType="PostDTO">
		SELECT *
		FROM post_orcl
		WHERE ID = #{value};
	</select>
	<select id="readAll" resultType="PostDTO">
		SELECT *
		FROM post_orcl;
	</select>
	<!-- Update -->
	<update id="update" parameterType="PostDTO">
		UPDATE post_orcl SET TITLE = #{post_title}, POSTCONTENT = #{post_content}
		WHERE (ID = #{post_id});
	</update>
	<!-- Delete -->
	<delete id="delete" parameterType="int">
		DELETE FROM post_orcl
		WHERE ID = #{value};
	</delete>
</mapper>
